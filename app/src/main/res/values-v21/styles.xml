<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/red_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/color_accent</item>
    </style>

    <style name="texts">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginLeft">@dimen/spacing_10</item>
        <item name="android:layout_marginTop">@dimen/spacing_5</item>
        <item name="android:layout_marginRight">@dimen/spacing_5</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>