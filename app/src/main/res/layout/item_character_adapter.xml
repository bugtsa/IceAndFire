<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="character"
            type="com.bugtsa.iceandfire.data.storage.models.CharacterOfHouse"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/spacing_big_medium_48"
            android:layout_height="@dimen/spacing_big_medium_48"
            android:layout_marginLeft="@dimen/font_normal_16"
            android:layout_marginRight="@dimen/font_normal_16"
            android:layout_marginTop="@dimen/font_normal_16"
            android:layout_marginBottom="@dimen/font_normal_16"
            android:id="@+id/ivAccount"
            android:src="@drawable/ic_item"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_character"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="@dimen/spacing_normal_16"
                android:textColor="@color/color_primary_dark"
                android:textSize="@dimen/font_large_20"
                android:text="@{character.name}"
                tools:text="test Name"/>

            <TextView
                android:id="@+id/alias_character"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/font_normal_16"
                android:text="@{character.aliasTitle}"
                tools:text="test Alias"/>
        </LinearLayout>
    </LinearLayout>
</layout>