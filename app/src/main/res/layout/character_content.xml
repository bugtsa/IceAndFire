<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:text="@string/character_words"
                android:textSize="@dimen/font_big_larger_24"
                tools:text="@string/character_words"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:text="@string/character_words"
                android:textSize="@dimen/font_large_20"
                tools:ignore="RtlHardcoded"
                tools:text="@string/character_words"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:text="@string/character_born"
                android:textSize="@dimen/font_big_larger_24"
                tools:text="@string/character_born"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:text="@string/character_born"
                android:textSize="@dimen/font_large_20"
                tools:ignore="RtlHardcoded"
                tools:text="@string/character_born"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:text="@string/character_titles"
                android:textSize="@dimen/font_big_larger_24"
                tools:text="@string/character_titles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:singleLine="false"
                android:text="@string/character_titles"
                android:textSize="@dimen/font_large_20"
                tools:ignore="RtlHardcoded"
                tools:text="@string/character_titles"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_big_medium_48"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:text="@string/character_aliases"
                android:textSize="@dimen/font_big_larger_24"
                tools:text="@string/character_aliases"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:singleLine="false"
                android:text="@string/character_aliases"
                android:textSize="@dimen/font_large_20"
                tools:text="@string/character_aliases"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_big_medium_48"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:text="@string/character_mother"
                android:textSize="@dimen/font_big_larger_24"
                tools:text="@string/character_mother"
                android:id="@+id/textView"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Button.Dark.Red"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:text="@string/character_mother"
                android:textSize="@dimen/font_large_20"
                tools:text="@string/character_mother"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small_8"
            android:orientation="horizontal">

            <ImageView
                style="@style/icon.left"
                android:src="@drawable/github_circle"
                android:visibility="invisible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:text="@string/character_father"
                android:textSize="@dimen/font_big_larger_24"
                tools:text="@string/character_father"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Button.Dark.Red"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_medium_32"
                android:text="@string/character_father"
                android:textSize="@dimen/font_large_20"
                tools:text="@string/character_father"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>