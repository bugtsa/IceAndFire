<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="colorButtonNormal">@color/color_primary_dark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="match_and_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_double">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="appbar" parent="match_and_wrap">
        <item name="android:background">@color/color_primary</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="user_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/profile_image_height_256</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/user_profile</item>
    </style>

    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:layout_gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:src">@drawable/ic_item</item>
    </style>

    <style name="text_view">
        <item name="android:layout_width">@dimen/zeros_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="text_view_left" parent="text_view">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
        <item name="android:textSize">@dimen/font_big_larger_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_view_right" parent="text_view">
        <item name="android:layout_weight">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:layout_columnSpan">2</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">
    </style>

    <style name="Button.Branded" parent="Button">
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_large_20</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <!-- ToolBar -->

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="texts">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_marginLeft">@dimen/spacing_10</item>
        <item name="android:layout_marginTop">@dimen/spacing_10</item>
        <item name="android:layout_marginRight">@dimen/spacing_5</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
